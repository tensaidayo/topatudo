<p id="notice"><%= notice %></p>

<h1>Messages</h1>

  <div class="row">
    <% @messages.each do |message| %>
    <div class="col-3">
      <div class="card">
        <div class="card-header">
        <%= message.title %>
        </div>
        <div class="card-body">
        <%= message.description %>
      </div>
    <% end %>
</div>
</div>
</div>




<%= link_to 'New Message', new_message_path %>
